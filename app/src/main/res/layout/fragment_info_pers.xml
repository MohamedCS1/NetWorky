<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_purple"
    tools:context=".Fragments.InfoPersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_60sdp"
        android:gravity="center"
        android:background="@drawable/radius_background"
        android:foreground="@drawable/background_info1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserratbold"
                    android:gravity="center"
                    android:text="Veuillez introduire\nvos informations \npersonnelles"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_20ssp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:inputType="textPersonName"
                    android:background="@drawable/radius_background"
                    android:backgroundTint="#16582FFF"
                    android:padding="@dimen/_12sdp"
                    android:hint="Nom" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:inputType="textPersonName"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/radius_background"
                    android:backgroundTint="#19582FFF"
                    android:padding="@dimen/_12sdp"
                    android:hint="PÃ©nom" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:inputType="textPersonName"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/radius_background"
                    android:backgroundTint="#19582FFF"
                    android:padding="@dimen/_12sdp"
                    android:hint="Nom d'utilisateur" />

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:background="@drawable/radius_background"
                        android:backgroundTint="#19582FFF"
                        android:padding="@dimen/_12sdp"
                        android:hint="sex" />




                </androidx.coordinatorlayout.widget.CoordinatorLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bu_suivant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    app:cardCornerRadius="10pt"
                    app:cardBackgroundColor="@color/my_purple">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="suivant"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserratbold"
                        android:textSize="@dimen/_15ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_marginLeft="@dimen/_20sdp"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@drawable/radius_background"
                        android:backgroundTint="@color/my_purple"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_3sdp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@drawable/radius_background"
                        android:backgroundTint="@color/my_purple"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_3sdp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@drawable/radius_background"
                        android:backgroundTint="#4F582FFF"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_3sdp"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_purple"
    tools:context=".Fragments.SingUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:background="@drawable/radius_background"
        android:orientation="vertical">

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:foreground="@drawable/background_info"
         android:gravity="center"
         android:orientation="vertical">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_40sdp"
             android:fontFamily="@font/montserratbold"
             android:gravity="center"
             android:text="NetWorky"
             android:textColor="@color/black"
             android:textSize="@dimen/_30ssp" />

         <ImageView
             android:id="@+id/imageView"
             android:layout_width="@dimen/_110sdp"
             android:layout_height="@dimen/_110sdp"
             android:layout_gravity="center"
             android:layout_marginTop="@dimen/_20sdp"
             android:layout_marginBottom="20dp"
             android:src="@drawable/logocoloring" />

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:layout_marginTop="@dimen/_20sdp"
             android:layout_marginRight="@dimen/_30sdp"
             android:layout_marginLeft="@dimen/_30sdp"
             android:inputType="textPersonName"
             android:background="@drawable/radius_background"
             android:backgroundTint="#16582FFF"
             android:padding="@dimen/_12sdp"
             android:hint="Email" />

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:layout_marginRight="@dimen/_30sdp"
             android:layout_marginLeft="@dimen/_30sdp"
             android:inputType="textPassword"
             android:layout_marginTop="@dimen/_20sdp"
             android:background="@drawable/radius_background"
             android:backgroundTint="#19582FFF"
             android:padding="@dimen/_12sdp"
             android:hint="mot de passe" />

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:layout_marginRight="@dimen/_30sdp"
             android:layout_marginLeft="@dimen/_30sdp"
             android:inputType="textPassword"
             android:layout_marginTop="@dimen/_20sdp"
             android:background="@drawable/radius_background"
             android:backgroundTint="#19582FFF"
             android:padding="@dimen/_12sdp"
             android:hint="confirme le mot de passe" />


         <androidx.cardview.widget.CardView
             android:id="@+id/bu_sign_up"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10pt"
             android:background="?attr/selectableItemBackgroundBorderless"
             app:cardCornerRadius="10pt"
             app:cardBackgroundColor="@color/my_purple"
             >
             <TextView

                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:textColor="@color/white"
                 android:text="Sign Up"
                 android:paddingLeft="15pt"
                 android:textSize="8pt"
                 android:paddingRight="15pt"
                 android:paddingTop="5pt"
                 android:paddingBottom="5pt"
                 >

             </TextView>

         </androidx.cardview.widget.CardView>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="bottom"
             android:paddingBottom="@dimen/_20sdp"
             android:layout_marginTop="@dimen/_10sdp"
             android:layout_marginRight="@dimen/_15sdp"
             android:layout_marginLeft="@dimen/_15sdp"
             android:orientation="horizontal">
             <View
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_3sdp"
                 android:background="@drawable/radius_background"
                 android:backgroundTint="@color/my_purple"
                 android:layout_weight="1"
                 android:layout_margin="@dimen/_3sdp"/>
             <View
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_3sdp"
                 android:background="@drawable/radius_background"
                 android:backgroundTint="#4F582FFF"
                 android:layout_weight="1"
                 android:layout_margin="@dimen/_3sdp"/>
             <View
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_3sdp"
                 android:background="@drawable/radius_background"
                 android:backgroundTint="#4F582FFF"
                 android:layout_weight="1"
                 android:layout_margin="@dimen/_3sdp"/>

         </LinearLayout>
     </LinearLayout>
 </ScrollView>
    </LinearLayout>
</FrameLayout>